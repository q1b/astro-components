---
import { LinkIcon } from "../assets/icons"
import { createUniqueId } from "solid-js"

export interface Props {
    url: string
    title: string
    description: string
    publishedOn: string
}

const { title, description, publishedOn, url } = Astro.props as Props

const date = new Date(publishedOn)
function formatDate(date: Date) {
    return new Intl.DateTimeFormat("en", {
        dateStyle: "long",
    }).format(date)
}
const svgId = createUniqueId();
---

<a href={url} class="relative w-full">
    <svg class="pointer-events-none absolute rounded-xl isolate z-40 opacity-40 dark:opacity-70 mix-blend-multiply dark:mix-blend-soft-light"
        width="100%" height="100%">
        <filter id={svgId}>
            <feTurbulence type="fractalNoise" baseFrequency="0.80" numOctaves="4" stitchTiles="stitch"></feTurbulence>
        </filter>
        <rect width="100%" height="100%" filter={`url(#${svgId})`}></rect>
    </svg>
    <div
        class="p-4 relative overflow-hidden cursor-pointer group rounded-xl backdrop-blur-md backdrop-saturate-150 shadow-glass shadow-teal-200/10 dark:shadow-teal-800/10 bg-teal-200 hover:bg-teal-200 dark:bg-teal-800 dark:hover:bg-teal-800 transition-colors">
        <div class="absolute top-4 right-4">
            <LinkIcon basic class="text-teal-900 dark:text-white" client:idle />
        </div>
        <dl>
            <dt class="sr-only">Published On</dt>
            <dd class="font-medium text-teal-800 dark:text-white">
                <!-- <time datetime="2021-09-30T19:00">September 30, 2021</time> -->
                <time datetime={date.toISOString()}>{formatDate(date)}</time>
            </dd>
        </dl>
        <h1 class="text-3xl tracking-tight mb-2 font-bold text-teal-600 dark:text-teal-200">
            {title}
        </h1>
        <p class="text-xl font-medium text-teal-400">
            {description}
        </p>
    </div>
</a>
